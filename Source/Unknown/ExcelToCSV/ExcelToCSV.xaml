<Window x:Class="ExcelToCSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelToCSV"
        mc:Ignorable="d"
        Title="ExcelToCSV" Height="450" Width="800" Closed="MainWindow_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="197*"/>
            <ColumnDefinition Width="199*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="FullPathListBox" HorizontalAlignment="Left" Height="320" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" DragEnter="FullPathListBox_DragEnterFullPathListBox" Drop="FullPathListBox_DragDropFullPathListBox" AllowDrop="True" Grid.ColumnSpan="2"/>
        <Button x:Name="ExcelToCSVButton" Content="ExcelToCSV" HorizontalAlignment="Left" Margin="349,350,0,0" VerticalAlignment="Top" Width="92" RenderTransformOrigin="0.096,-0.156" Height="45" Grid.ColumnSpan="2" Click="ExcelToCSVButton_Click"/>
        <Button x:Name="ClearFullPathListButton" Content="Clear" HorizontalAlignment="Left" Margin="83,350,0,0" VerticalAlignment="Top" Width="92" RenderTransformOrigin="0.096,-0.156" Height="45" Click="ClearFullPathListButton_Click" Grid.Column="1"/>
    </Grid>
</Window>
